<% flash_messages %>
<div class="panel panel-info panel_top">
	<div class="panel-heading">
		<h4>招待</h4>
	</div>
	<div class="panel-body">
  <% if @schedules.count == 0%>
    <p>招待用のスケジュールが１件も登録されていません</p>
  <% else %>
    <%= form_tag('/post') do %>
    <div class="form-group">
			<div class="row">
				<div class="col-sm-12">
					<%= label_tag '名前' %>
					<%= text_field_tag 'name' %>
				</div>
			</div>
    </div>
		<div class="form-group">
			<div class="row">
				<div class="col-sm-12">
					<%= label_tag 'Email' %>
					<%= text_field_tag 'email' %>
				</div>
			</div>
    </div>
		<div class="form-group">
			<div class="row">
				<div class="col-sm-12">
					<%= label_tag 'スケジュール' %>
					<%= select_tag('schedule',options_from_collection_for_select(@schedules,:id,:title)) %>
				</div>
			</div>
    </div>
    <div class="actions">
      <%= submit_tag '通知を送る', class: 'btn btn-primary' %>
    </div>
     <% end %>
  <% end %>
	</div>
</div>
