<h2>ログイン画面</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% flash_messages %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: 'btn btn-default login_icon' %>
  </div>
<% end %>
<%= link_to 'auth/facebook', class: 'btn btn-primary facebook_icon' do %>
  <i class="fa fa-facebook-official"></i>
  <span>FaceBookログイン</span>
<% end %>
<%= link_to 'auth/google_oauth2', class: 'btn google_icon btn-danger' do  %>
  <i class="fa fa-google-plus-official"></i>
  <span>Googleログイン</span>
<% end %>
